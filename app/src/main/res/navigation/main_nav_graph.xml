<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/viewPagerMain">

    <fragment
        android:id="@+id/viewPagerMain"
        android:name="com.vikmanz.shpppro.ui.main.main_fragment.MainViewPagerFragment"
        android:label="fragmentPager"
        tools:layout="@layout/fragment_my_profile">
        <argument
            android:name="email"
            app:argType="string"
            android:defaultValue="login.fromnavigator@gmail.com"/>
    </fragment>


    <fragment
        android:id="@+id/myContactsFragment"
        android:name="com.vikmanz.shpppro.ui.main.main_fragment.my_contacts_list.MyContactsListFragment"
        android:label="fragment_my_contacts"
        tools:layout="@layout/fragment_my_contacts_list">
        <action
            android:id="@+id/action_myContactsFragment_to_contactDetailsFragment"
            app:destination="@id/contactDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/contactDetailsFragment"
        android:name="com.vikmanz.shpppro.ui.main.contact_details.ContactDetailsFragment"
        android:label="fragment_contact_details"
        tools:layout="@layout/fragment_contact_details">
        <argument
            android:name="contactID"
            app:argType="long" />
    </fragment>

</navigation>