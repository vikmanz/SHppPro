<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- Buttons styles. -->

    <style name="btnStd">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/size_text_font_small_16</item>
        <item name="android:layout_marginHorizontal">@dimen/offset_small_8</item>
    </style>

    <style name="btnStdOrange" parent="btnStd">
        <item name="android:layout_height">@dimen/size_button_height_large</item>
        <item name="android:background">@drawable/btn_std_orange_bg_allinonefile</item>
        <item name="android:textColor">?attr/colorTertiary</item>

    </style>

    <style name="btnStdWhite" parent="btnStd">
        <item name="android:layout_height">@dimen/size_button_height_medium</item>
        <item name="android:background">@drawable/btn_std_white_bg</item>
    </style>

    <style name="btnStdWhite_google" parent="btnStdWhite">
        <item name="android:background">@drawable/btn_google</item>
    </style>


    <!-- Text styles. -->

    <style name="login_text_hint">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textColorHighlight">?attr/colorPrimary</item>
        <item name="android:textColorLink">?attr/colorPrimary</item>
        <item name="android:shadowColor">?attr/colorPrimary</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">0</item>
        <!-- The color of the label when it is collapsed and the text field is active -->
        <item name="hintTextColor">?attr/colorPrimary</item>
        <!-- The color of the label in all other text field states (such as resting and disabled) -->
        <item name="android:textColorHint">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/size_text_font_medium_18</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="color">?attr/colorPrimary</item>
        <item name="colorAccent">?attr/colorPrimary</item>
        <item name="colorBackgroundFloating">?attr/colorPrimary</item>
        <item name="colorContainer">?attr/colorPrimary</item>
        <item name="colorOnBackground">?attr/colorPrimary</item>
        <item name="colorError">?attr/colorPrimary</item>
        <item name="colorButtonNormal">?attr/colorPrimary</item>
        <item name="colorControlNormal">?attr/colorPrimary</item>
        <item name="colorErrorContainer">?attr/colorPrimary</item>
        <item name="colorOnContainer">?attr/colorPrimary</item>
        <item name="colorOnContainerUnchecked">?attr/colorPrimary</item>
        <item name="colorOnError">?attr/colorPrimary</item>
        <item name="colorOutline">?attr/colorPrimary</item>
        <item name="colorOnPrimary">?attr/colorPrimary</item>
        <item name="colorOnPrimaryContainer">?attr/colorPrimary</item>
        <item name="colorSurface">?attr/colorPrimary</item>
        <item name="colorSwitchThumbNormal">?attr/colorPrimary</item>
        <item name="actionTextColorAlpha">?attr/colorPrimary</item>
        <item name="android:amPmTextColor">?attr/colorPrimary</item>
        <item name="android:cacheColorHint">?attr/colorPrimary</item>
        <item name="android:calendarTextColor">?attr/colorPrimary</item>
        <item name="android:actionMenuTextColor">?attr/colorPrimary</item>
        <item name="android:colorFocusedHighlight">?attr/colorPrimary</item>
        <item name="android:colorBackgroundCacheHint">?attr/colorPrimary</item>
        <item name="android:color">?attr/colorPrimary</item>
        <item name="android:colorAccent">?attr/colorPrimary</item>
        <item name="android:colorMode">default</item>
        <item name="android:colorPrimaryDark">?attr/colorPrimary</item>
        <item name="colorPrimaryContainer">?attr/colorPrimary</item>
        <item name="colorPrimaryInverse">?attr/colorPrimary</item>
        <item name="android:colorSecondary">?attr/colorPrimary</item>
        <item name="android:numbersBackgroundColor">?attr/colorPrimary</item>
        <item name="android:textColorPrimaryDisableOnly">?attr/colorPrimary</item>
        <item name="android:textColorPrimaryInverseDisableOnly">?attr/colorPrimary</item>
        <item name="android:textColorPrimaryInverseNoDisable">?attr/colorPrimary</item>
    </style>

    <style name="text_White_clear" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/opensans</item>
        <item name="android:textSize">@dimen/size_text_font_medium_18</item>
        <item name="android:textAppearance">@dimen/size_text_font_medium_18</item>
    </style>

    <style name="text_White" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/opensans</item>
        <item name="android:textColor">?attr/colorTertiary</item>
        <item name="android:textSize">@dimen/size_text_font_medium_18</item>
    </style>

    <style name="text_White_centered" parent="text_White">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="text_White_small" parent="text_White">
        <item name="android:textSize">@dimen/size_text_font_small_16</item>
    </style>

    <style name="text_White_big" parent="text_White">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_text_font_medium_18</item>
    </style>

    <style name="text_White_mini_centered" parent="text_White">
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/size_text_font_mini_12</item>
    </style>

    <style name="text_White_big_centered" parent="text_White_big">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="text_White_HelloText_Upper" parent="text_White_centered">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_text_font_big_24</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="text_White_HelloText_Sub" parent="text_White_centered">
        <item name="android:textSize">@dimen/size_text_font_smaller_14</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="text_White_Email_Password" parent="text_White">
        <item name="android:textSize">@dimen/size_text_font_smaller_14</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="text_White_Title" parent="text_White">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_text_font_large_32</item>
    </style>

    <style name="text_Grey" parent="text_White">
        <item name="android:textColor">?attr/colorOnTertiary</item>
    </style>

    <style name="text_Grey_small" parent="text_White">
        <item name="android:textSize">@dimen/size_text_font_small_16</item>
        <item name="android:textColor">?attr/colorOnTertiary</item>
    </style>

    <style name="text_Grey_smaller" parent="text_Grey">
        <item name="android:textSize">@dimen/size_text_font_smaller_14</item>
    </style>

    <style name="text_Grey_smaller_centered" parent="text_Grey_smaller">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="text_Grey_smaller_centered_bold" parent="text_Grey_smaller_centered">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_Blue" parent="text_White">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="text_Blue_smaller" parent="text_Blue">
        <item name="android:textSize">@dimen/size_text_font_smaller_14</item>
    </style>


</resources>