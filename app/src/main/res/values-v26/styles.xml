<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ————————————————————  Text styles. ———————————————————— -->

    <style name="basicText" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/opensans</item>
    </style>




    <!-- ————————————————————  TextInput styles. ———————————————————— -->

    <style name="textInputLayout_LoginPassword" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:fontFamily">@font/opensans</item>
        <item name="android:textColor">?attr/colorTertiary</item>
        <item name="android:textColorHint">?attr/colorTertiary</item>
        <item name="android:textSize">@dimen/size_text_font_large_32</item>
        <item name="helperTextTextColor">?attr/colorError</item>
    </style>

    <style name="textInputLayout_hintAppearance">
        <item name="android:textSize">@dimen/size_text_font_small_16</item>
        <item name="android:gravity">left</item>
    </style>


</resources>