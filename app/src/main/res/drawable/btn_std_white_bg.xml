<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed -->
    <item
        android:drawable="@drawable/btn_std_white_bg_pressed"
        android:state_pressed="true" />

    <!-- focused -->
    <item
        android:drawable="@drawable/btn_std_white_bg_focused"
        android:state_focused="true" />

    <!-- hovered -->
    <item
        android:drawable="@drawable/btn_std_white_bg_hovered"
        android:state_hovered="true" />

    <!-- default -->
    <item
        android:drawable="@drawable/btn_std_white_bg_normal" />

</selector>