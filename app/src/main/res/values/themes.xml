<resources>
    <!-- Base application theme. -->
    <style name="defaultTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/default_theme_color_primary</item>
        <item name="colorOnPrimary">@color/default_theme_color_secondary</item>
        <item name="colorPrimaryVariant">@color/default_theme_color_primary_variant</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/default_theme_color_secondary</item>
        <item name="colorSecondaryVariant">@color/default_theme_color_secondary_variant</item>

        <!-- Text colors. -->
        <item name="colorTertiary">@color/default_theme_text_color_primary</item>
        <item name="colorOnTertiary">@color/default_theme_text_color_secondary</item>
        <item name="colorError">@color/default_theme_text_error</item>

        <!-- Widgets styles. -->
        <item name="android:textViewStyle">@style/basicText</item>

        <item name="myGoogleButtonStyle">@style/defaultMyGButtonStyle</item>

    </style>

    <style name="defaultMyGButtonStyle">
        <item name="mgbText">GOOGLE</item>
        <item name="mgbTextColor">#000000</item>
        <item name="mgbButtonColor">#B4B4B4</item>
        <item name="mgbLogo1Color">#4285F4</item>
        <item name="mgbLogo2Color">#0F9D58</item>
        <item name="mgbLogo3Color">#F4B400</item>
        <item name="mgbLogo4Color">#DB4437</item>
    </style>

</resources>