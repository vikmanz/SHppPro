<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ————————————————————  Text styles. ———————————————————— -->

    <style name="basicText" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/open_sans_regular</item>     <!-- FONT -->
        <item name="android:textColor">?attr/colorTertiary</item>
        <item name="android:textSize">@dimen/size_text_font_S</item>
    </style>

    <style name="basicText_bold" parent="basicText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="checkbox" parent="basicText">
        <item name="android:textSize">@dimen/size_text_font_XS</item>
        <item name="android:textStyle">bold</item>
        <item name="android:button">@drawable/checkbox_selector</item>
        <item name="android:paddingStart">8sp</item>
    </style>

    <style name="basicText_buttonsText" parent="basicText">
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>     <!-- FONT -->
        <!-- Nothing. Need to overwrite buttons font size on UA language. -->
    </style>




    <!-- ————————————————————  TextInput styles. ———————————————————— -->

    <style name="textInputLayout_LoginPassword" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:textSize">@dimen/size_text_font_XL</item>
        <item name="helperTextTextColor">?attr/colorError</item>
        <item name="boxCollapsedPaddingTop">@dimen/email_password_boxCollapsedPaddingTop</item>
        <item name="expandedHintEnabled">false</item>
        <item name="android:textColorHint">?attr/colorOnTertiary</item>
    </style>

    <style name="textInputLayout_hintSize">
        <item name="android:textSize">@dimen/size_text_font_XS</item>
    </style>

    <style name="textInputLayout_basicTextInput" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/open_sans_regular</item>      <!-- FONT -->
        <item name="android:textColor">?attr/colorTertiary</item>
        <item name="android:background">@drawable/edittext_bottom_line_white</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="textInput_AddNewContact" parent="textInputLayout_basicTextInput">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:background">@drawable/edittext_bottom_line_secondary_color</item>
    </style>




    <style name="MaterialAlertDialog_rounded" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/DialogCorners</item>
    </style>

    <style name="DialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>