<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthActivity"
    android:focusableInTouchMode="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutMainBG"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSecondary"
        >




        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearLayoutHello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/text_White_HelloText_Upper"
                android:id="@+id/tvHelloText"
                android:text="@string/helloText"/>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/text_White_HelloText_Sub"
                android:id="@+id/tvHelloSubText"
                android:text="@string/helloSubText" />


        </androidx.appcompat.widget.LinearLayoutCompat>





        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearLayoutEmailPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_small_8"
            android:layout_marginHorizontal="@dimen/offset_medium_16"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutHello"
            app:layout_constraintVertical_bias="0"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/textInputLayout_LoginPassword"
                android:hint="@string/title_e_mail"
                app:hintTextAppearance="@style/textInputLayout_hint_appearance"
                app:boxCollapsedPaddingTop="4dp"
                app:expandedHintEnabled="false"
                android:id="@+id/tiLayoutEmail"
                >



                <com.google.android.material.textfield.TextInputEditText
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/tiTextEmail"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/edittext_bottom_line"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:textColor="?attr/colorTertiary"
                    />


            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:paddingTop="@dimen/offset_small_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title_password"
                app:hintTextAppearance="@style/textInputLayout_hint_appearance"
                style="@style/textInputLayout_LoginPassword"
                app:helperTextEnabled="true"
                app:boxCollapsedPaddingTop="4dp"
                app:expandedHintEnabled="false"
                app:counterEnabled="true"
                app:counterTextColor="?attr/colorTertiary"
                app:counterMaxLength="16"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="?attr/colorTertiary"
                android:id="@+id/tiLayoutPassword"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/tiTextPassword"
                    android:inputType="textPassword"
                    android:background="@drawable/edittext_bottom_line"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:textColor="?attr/colorTertiary"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/offset_small_8"
                android:text="@string/rememberMeCheckbox"
                android:textColor="?attr/colorTertiary"
                android:fontFamily="@font/opensans"
                android:buttonTint="?attr/colorTertiary"
                android:textSize="@dimen/size_text_font_small_16"
                android:focusableInTouchMode="true"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flowProfileSummary"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/offset_small_8"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/offset_medium_16"
            app:constraint_referenced_ids="bRegisterByGoogle, googleOrRegister, bRegisterByEmailPassword"
            app:flow_horizontalGap="@dimen/offset_small_8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutEmailPassword"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bRegisterByGoogle"
            style="@style/btnStdWhite_google"

            android:layout_height="@dimen/size_button_height_medium"
            android:layout_width="wrap_content"

            tools:ignore="MissingConstraints,TouchTargetSizeCheck,SpeakableTextPresentCheck"
            />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/text_White_centered"
            android:id="@+id/googleOrRegister"
            android:text="@string/googleOrRegister"
            android:gravity="center"

            android:layout_height="@dimen/size_button_height_medium"
            android:layout_width="wrap_content"

            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/btnStdOrangeOutlined"
            android:id="@+id/bRegisterByEmailPassword"
            android:text="@string/registerButton"

            android:layout_height="@dimen/size_button_height_medium"
            android:layout_width="wrap_content"

            tools:ignore="MissingConstraints" />




        <androidx.appcompat.widget.AppCompatTextView
            style="@style/text_White_mini_centered"
            android:id="@+id/warningAboutTerms"
            android:layout_marginTop="@dimen/offset_small_8"
            android:text="@string/termsAgreeWarning_landscape"
            android:textColor="?attr/colorTertiary"
            android:textSize="@dimen/size_text_font_mini_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bRegisterByEmailPassword"
            />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/alreadyHaveAcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_small_8"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/warningAboutTerms"
            app:layout_constraintVertical_bias="0">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/text_Grey_small"
                android:id="@+id/alreadyHaveAccMessage"
                android:text="@string/already_have_an_account" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/text_White_small"
                android:id="@+id/alreadyHaveAccLink"
                android:layout_marginStart="12dp"
                android:text="@string/sign_in" />


        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>